{% extends "base.twig" %}

{% block style %} <link rel="stylesheet" href="/style/contactAdminForm.css">{% endblock %}

{% block header %}
   {% include "../headers/header_form.twig" %}
{% endblock %}

{% block main %}
  <h1>Contact</h1>

  <section>
     <form action="/contact" method='post'>
        <div>
           <label for="clientName">Nom</label>
           <input type="text" id="clientName" name ='name'>
           <p class ='error_p'> </p>
        </div>

        <div>
           <label for="clientMail">Mail</label>
           <input type="email" id='clientMail' name='clientMail'>
           <p class='error_p'> </p>
        </div>

        <div>
           <label for="subject">Objet</label>
           <input type="text" id='subject' name = 'subject'>
           <p class='error_p'> </p>
        </div>
     
        <div>
           <label for="message">Message</label>
           <textarea  id="message" required name="message"> </textarea>
        </div>

        <button type="submit">Envoyer</button>
    </form>
 </section>
{% endblock %}